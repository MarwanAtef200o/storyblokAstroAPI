---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<section {...storyblokEditable(blok)} class='relative bg-gray-900 grid grid-cols-2 p-8 min-h-[80vh] gap-8 text-gray-200'>
  <div class="relative z-10 grid items-center gap-4">

  <h1 class=' text-5xl font-bold'>{blok.headline}</h1>
  <h2 class=' text-2xl font-bold'>{blok.description}</h2>

</div>

<img src={blok.image?.filename} class="absolute z-0 w-full h-full top-0 left-0 object-cover">
</section> 
